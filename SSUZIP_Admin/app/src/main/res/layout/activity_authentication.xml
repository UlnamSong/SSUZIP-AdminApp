<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_authentication"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ssumunity.ssuzip_admin.Activity.AuthenticationActivity"
    android:background="#FFFFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/imageView3"
            app:srcCompat="@drawable/locker"
            android:src="@drawable/locker"
            android:layout_marginTop="20dp"
            android:layout_height="70dp" />

        <TextView
            android:text="@string/auth_contenttop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:gravity="center_horizontal"
            android:layout_marginTop="25dp" />

        <TextView
            android:text="@string/auth_contentmid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:gravity="center_horizontal"
            android:layout_marginTop="2dp" />

        <TextView
            android:text="@string/auth_contentbot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp" />

        <TextView
            android:text="@string/auth_accountcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_accountcode"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="30dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:ems="10"
            android:id="@+id/et_accountcode"
            android:background="@drawable/edittext_borderwhite"
            android:paddingRight="10dp"
            android:hint="@string/auth_accountcodehint"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_authcode"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:text="@string/auth_authcode" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/et_authcode"
            android:password="false"
            android:background="@drawable/edittext_borderwhite"
            android:paddingLeft="10dp"
            android:hint="@string/auth_authcodehint"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:text="@string/auth_signupbutton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/signup_button"
        android:background="@drawable/login_button_bg"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="11dp" />

</RelativeLayout>
