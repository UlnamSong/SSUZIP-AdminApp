<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_app_info_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.itsnowball.educraftadmin.AppInfoPopupActivity"
    android:background="@color/colorWhite"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView11"
        android:id="@+id/appInfoLayout"
        android:layout_above="@+id/layout_button"
        android:padding="16dp">

        <TextView
            android:text="@string/event_popup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name_content"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="#FF000000" />

        <TextView
            android:text="@string/event_popup_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_id"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_id_content"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="#FF000000" />

        <TextView
            android:text="@string/event_popup_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_major"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_major_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#FF000000" />

        <TextView
            android:text="@string/event_popup_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_gender"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_gender_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#FF000000" />

        <TextView
            android:text="@string/event_popup_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_phone"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_phone_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#FF000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layout_button"
        android:padding="16dp">

        <Button
            android:text="@string/event_popup_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ok_button"
            android:layout_weight="1"
            android:contentDescription="내려받기"
            android:background="@drawable/main_button_bg"
            android:layout_marginLeft="3dp" />
    </LinearLayout>

    <TextView
        android:text="1위 정보"
        android:layout_width="match_parent"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="24sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:layout_height="60dp" />

</RelativeLayout>
